{
	"name": "folder-archiver",
	"displayName": "Folder Archiver",
	"description": "Archives any folder in the workspace",
	"version": "0.0.3",
	"publisher": "pdamianik",
	"engines": {
		"vscode": "^1.45.0"
	},
	"license": "SEE LICENSE IN LICENSE",
	"categories": [
		"Other"
	],
	"keywords": [
		"archive",
		"zip",
		"compress"
	],
	"preview": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/pdamianik/folder-archiver.git"
	},
	"activationEvents": [
		"onCommand:folder-archiver.archive"
	],
	"main": "./dist/extension",
	"browser" : "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "folder-archiver.archive",
				"title": "Archive"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "folder-archiver.archive",
					"group": "2_workspace"
				}
			]
		},
		"configuration": {
			"title": "Folder Archiver",
			"properties": {
				"folder-archiver.maxArchiveThreadCount": {
					"type": "integer",
					"default": 5,
					"description": "The maximum amount of parallel archiving process that can run at once"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"folder-archiver-types": "^2.0.3",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"ts-loader": "^7.0.4",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {}
}
